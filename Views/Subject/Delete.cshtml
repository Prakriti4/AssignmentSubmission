@model SchoolManagementSystem.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h2>Delete Subject</h2>

<div>
    <h4>Subject Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Subject Name</dt>
        <dd class="col-sm-10">@Model.SubjectName</dd>

        <dt class="col-sm-2">Subject Code</dt>
        <dd class="col-sm-10">@Model.SubjectCode</dd>

        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Faculty</dt>
        <dd class="col-sm-10">@Model.Faculty?.Name</dd>

        <dt class="col-sm-2">Semester</dt>
        <dd class="col-sm-10">@Model.Semester?.Name</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
