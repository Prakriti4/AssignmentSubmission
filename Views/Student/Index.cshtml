@model IEnumerable<User>

<a asp-controller="Student" asp-action="Create" class="btn btn-primary">Add Student</a>
<div class="text-center">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">SN</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @if (Model != null && Model.Any())
            {
                @foreach (var student in Model)
                {
                    <tr data-url="@Url.Action("Detail", new { id = student.Id })"
                        onclick="window.location=this.dataset.url">
                        <th scope="row">@(i++)</th>
                        <td>@student.Name</td>
                        <td>@student.Email</td>
              
                        <td>
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No students available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
