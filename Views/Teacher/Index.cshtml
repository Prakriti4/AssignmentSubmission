@model IEnumerable<User>

    <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">AddTeacher</a>
<div class="text-center">
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">SN</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>           
        </tr>
    </thead>
    <tbody>
            @{
                int i = 1;
            }
            @if(Model is not null)
            {
                @foreach(var teacher in Model)
                {
                    <tr data-url="@Url.Action("Detail",new{id=teacher.Id})"
                    onclick="window.location=this.dataset.url">
                        <th scope="row">@(i++)</th>
                        <td>@teacher.Name</td>
                        <td>@teacher.Email</td>
                        
                        <td>
                            <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning">Edit</a>
                            @* 	<a asp-controller="Teacher" asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-warning">Details</a> *@
                            <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
                        </td>

                </tr>
                }
            }
    </tbody>
    </table>
</div>