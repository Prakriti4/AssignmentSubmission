@model IEnumerable<SchoolManagementSystem.Models.Section>

<a asp-controller="Section" asp-action="Create" class="btn btn-primary">Add Section</a>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">SN</th>
                <th scope="col">Section</th>
                <th scope="col">Semester</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }

            @foreach (var currentSection in Model)
            {
                <tr>
                    <th scope="row">@(i++)</th>
                    <td>@currentSection.SectionName</td>
                    <td>@currentSection.Semester.Name</td> <!-- Access Semester Name -->
                    
                    <td>
                        <a asp-controller="Section" asp-action="Edit" asp-route-id="@currentSection.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Section" asp-action="Delete" asp-route-id="@currentSection.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
