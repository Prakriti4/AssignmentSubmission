@model SchoolManagementSystem.ViewModel.CreateStudentViewModel

<h2>Create Student</h2>

<div class="container">

    <form asp-controller="Section" asp-action="CreateStudent" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Role" value="Student" />

        <div class="row">
            <!-- Student Name -->
            <div class="form-group col-lg-6 mt-2">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" placeholder="Enter Student Name" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-group col-lg-6 mt-2">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group col-lg-6 mt-2">
                <label asp-for="StudentEmail" class="control-label"></label>
                <input asp-for="StudentEmail" class="form-control" placeholder="Enter Email Address" />
                <span asp-validation-for="StudentEmail" class="text-danger"></span>
            </div>

            <!-- Date of Birth -->
            <div class="form-group col-lg-6 mt-2">
                <label asp-for="DateofBirth" class="control-label"></label>
                <input asp-for="DateofBirth" class="form-control" type="date" />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>

            <!-- Semester Dropdown -->
            <div class="form-group col-lg-6 mt-2">
                <label asp-for="SemesterId" class="control-label"></label>
                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.Semesters"></select>
                <span asp-validation-for="SemesterId" class="text-danger"></span>
            </div>

            <!-- Faculty Dropdown -->
            <div class="form-group col-lg-6 mt-2">
                <label asp-for="FacultyId" class="control-label">Faculty</label>
                <select asp-for="FacultyId" asp-items="ViewBag.Faculties" class="form-control">
                    <option value="">Select Faculty</option>
                </select>
                <span asp-validation-for="FacultyId" class="text-danger"></span>
            </div>

            <!-- Image Upload -->
            <div class="form-group col-lg-6">
                <label asp-for="Image" class="control-label">Upload Image</label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>

        <!-- Password -->
        <div class="form-group col-lg-6">
            <label asp-for="Password" class="control-label"></label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Confirm Password -->
        <div class="form-group col-lg-6">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Submit and Cancel Buttons -->
        <div class="mt-5">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
