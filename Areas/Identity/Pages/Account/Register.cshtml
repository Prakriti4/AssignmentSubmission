@page
@model SchoolManagementSystem.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>
<h4>Create a new account.</h4>
<hr />
<div class="row d-flex justify-content-center" style=" margin:0 480px; height:70vh; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
    <div class="col-md-4 w-100">
        <form method="post" class="my-5">
            <h4>Register Form</h4>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Name" class="control-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email" class="control-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="control-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Input.SelectedRole" class="control-label"></label>
                <select asp-for="Input.SelectedRole" class="form-control" asp-items="Model.Input.RolesList"></select>
                <span asp-validation-for="Input.SelectedRole" class="text-danger"></span>
            </div>

          

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
